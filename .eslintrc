{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "comma-dangle": "off",
    "react/forbid-prop-types": "off",
    "class-methods-use-this": "off"
  },
  "globals": {
    "window": true,
    "document": true,
    "fetch": true,
    "Headers": true,
    "setTimeout": true,
    "localStorage": true,
    "URLSearchParams": true,
    "FormData": true,
    "Image": true
  }
}
